{
  "name": "root",
  "type": "module",
  "private": true,
	"scripts": {
		"start": "env-cmd --file ./.env npm-run-all -s start-scripts",
		"start-scripts": "npm-run-all -p start-pubsub setup",
		"setup": "npm-run-all -s setup-pubsub start:app",
		"start:emulator": "npm-run-all -p start-pubsub setup-pubsub",
		"start:app": "npm-run-all -p start:services start:client",
		"start:services": "npm-run-all -p s:account s:auth s:chat s:friends s:notif s:profile s:search ws:chat",
		"start-pubsub": "set GOOGLE_CLOUD_PROJECT=\"emulator\" && set PUBSUB_PROJECT_ID=\"emulator\" && gcloud beta emulators pubsub start --project=\"emulator\"",
		"setup-pubsub": "set GOOGLE_CLOUD_PROJECT=\"emulator\" && set PUBSUB_PROJECT_ID=\"emulator\" && node ./utils/setup_pubsub.js",
		"s:account": "cd ./packages/account-service && npm run start:dev",
		"s:auth": "cd ./packages/auth-service && npm run start:dev",
		"s:chat": "cd ./packages/chat-service && npm run start:dev",
		"s:friends": "cd ./packages/friends-service && npm run start:dev",
		"s:notif": "cd ./packages/notifications-service && npm run start:dev",
		"s:profile": "cd ./packages/profile-service && npm run start:dev",
		"s:search": "cd ./packages/user-search-service && npm run start:dev",
		"ws:chat": "cd ./packages/chat-websocket && npm run start:dev",
		"start:client": "cd ./packages/frontend-service && npm run start:dev"
	},
  "devDependencies": {
    "@google-cloud/pubsub": "^3.0.1",
    "env-cmd": "^10.1.0",
    "lerna": "^5.1.6",
    "npm-run-all": "^4.1.5",
    "nx": "^14.3.6"
  }
}
